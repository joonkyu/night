/*
  Local Powercord Bot
  Image And Name Placeholder
*/
$bot-msg: #a5b3ff;
$bot-name: #a5b3ff;

.wrapper-2a6GCs.ephemeral-1PsL1r {
  background-color: rgba(114, 137, 218, 0.05);
  box-shadow: inset 2px 0 #7289da;
  & .username-1A8OIy {
    --local-bot-name: "Night";
    color: $bot-name;
    visibility: hidden;
    &::before {
      content: var(--local-bot-name);
      visibility: visible;
    }
  }
  &:hover {
    background-color: rgba(114, 137, 218, 0.12) !important;
  }
  & [src*="powercord"],
  & [src*="/assets/"] {
    content: url("https://discord.com/assets/49533def46858e98682242755ef6912b.svg");
  }
  &
    [src*="powercord"]
    + .header-23xsNx
    > .headerText-3Uvj1Y
    > .botTagCozy-1fFsZk {
    margin-left: -65px;
  }
  &
    [src*="/assets/"]
    + .header-23xsNx
    > .headerText-3Uvj1Y
    > .botTagCozy-1fFsZk {
    margin-left: -30px;
  }
}

/*
  Local Bot Messages Color
